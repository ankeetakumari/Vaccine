@model VaccineManagementSystem.Models.CommonVaccinetbl

@{
    Layout = "_Layout1";
}
<style>
    body {
        background-image: url('https://g.foolcdn.com/editorial/images/787474/vaccine-with-world-map.jpg');
        background-size: cover;
        background-position: center;
    }
</style>

<body>
    <div class="container mt-5">
        <div class="row justify-content-center">
            <div class="col-md-8">
                <div class="card" style="background-color: rgba(255, 255, 255, 0.8);">
                    <div class="card-header text-center">
                        <h3>@ViewData["Title"]</h3>
                    </div>
                    <div class="card-body">
                        <form method="post" id="vaccineForm">
                            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                            <input type="hidden" asp-for="VaccineId" />
                            <div class="form-group">
                                <label asp-for="VaccineName" class="control-label"></label>
                                <input asp-for="VaccineName" class="form-control" />
                                <span asp-validation-for="VaccineName" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <label asp-for="CompanyName" class="control-label"></label>
                                <input asp-for="CompanyName" class="form-control" />
                                <span asp-validation-for="CompanyName" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <label asp-for="VaccineDesc" class="control-label"></label>
                                <input asp-for="VaccineDesc" class="form-control" />
                                <span asp-validation-for="VaccineDesc" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <label asp-for="VaccineImg" class="control-label"></label>
                                <input asp-for="VaccineImg" class="form-control" />
                                <span asp-validation-for="VaccineImg" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <label asp-for="City" class="control-label"></label>
                                <input asp-for="City" class="form-control" />
                                <span asp-validation-for="City" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <label asp-for="State" class="control-label"></label>
                                <input asp-for="State" class="form-control" />
                                <span asp-validation-for="State" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <label asp-for="Qty" class="control-label"></label>
                                <input asp-for="Qty" class="form-control" type="number" />
                                <span asp-validation-for="Qty" class="text-danger"></span>
                            </div>
                            <div class="form-group text-center">
                                <input type="submit" value="Save" class="btn btn-primary" />
                                <a asp-action="ViewVaccine" class="btn btn-secondary">Back to List</a>
                            </div>
                        </form>

                        @if (TempData["SuccessMessage"] != null)
                        {
                            <div class="alert alert-success mt-3">
                                @TempData["SuccessMessage"]
                            </div>
                        }
                    </div>
                </div>
            </div>
        </div>
    </div>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    <script src="~/lib/jquery-validation/dist/jquery.validate.min.js"></script>
    <script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>
    <script>
        $(document).ready(function () {
            $('#vaccineForm').validate({
                rules: {
                    VaccineName: {
                        required: true,
                        minlength: 3
                    },
                    CompanyName: {
                        required: true,
                        minlength: 3
                    },
                    VaccineDesc: {
                        required: true,
                        minlength: 10
                    },
                    VaccineImg: {
                        required: true
                    },
                    City: {
                        required: true,
                        minlength: 2
                    },
                    State: {
                        required: true,
                        minlength: 2
                    },
                    Qty: {
                        required: true,
                        number: true,
                        min: 1
                    }
                },
                messages: {
                    VaccineName: {
                        required: "Please enter the vaccine name",
                        minlength: "Vaccine name must be at least 3 characters long"
                    },
                    CompanyName: {
                        required: "Please enter the company name",
                        minlength: "Company name must be at least 3 characters long"
                    },
                    VaccineDesc: {
                        required: "Please enter the vaccine description",
                        minlength: "Description must be at least 10 characters long"
                    },
                    VaccineImg: {
                        required: "Please upload an image"
                    },
                    City: {
                        required: "Please enter the city",
                        minlength: "City name must be at least 2 characters long"
                    },
                    State: {
                        required: "Please enter the state",
                        minlength: "State name must be at least 2 characters long"
                    },
                    Qty: {
                        required: "Please enter the quantity",
                        number: "Please enter a valid number",
                        min: "Quantity must be at least 1"
                    }
                },
                errorPlacement: function (error, element) {
                    error.insertAfter(element);
                }
            });
        });
    </script>
</body>
