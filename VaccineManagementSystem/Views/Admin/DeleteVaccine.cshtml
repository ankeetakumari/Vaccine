@model VaccineManagementSystem.Models.CommonVaccinetbl
@{
    Layout = "_Layout1";
}

<h2 class="text-center text-white bg-danger py-3 rounded">Delete Vaccine</h2>
<style>
    body {
        background-image: url('https://g.foolcdn.com/editorial/images/787474/vaccine-with-world-map.jpg');
        background-size: cover;
        background-position: center;
    }
</style>
<h3 class="text-center">Are you sure you want to delete this vaccine?</h3>
<div class="container mt-4">
    <div class="card" style="background-color: rgba(255, 255, 255, 0.8);">
        <div class="card-body">
            <h4 class="card-title text-primary">Vaccine Details</h4>
            <hr />
            <dl class="row">
                <dt class="col-sm-3">Vaccine Name</dt>
                <dd class="col-sm-9">@Model.VaccineName</dd>
                <dt class="col-sm-3">Company Name</dt>
                <dd class="col-sm-9">@Model.CompanyName</dd>
                <dt class="col-sm-3">Description</dt>
                <dd class="col-sm-9">@Model.VaccineDesc</dd>
                <dt class="col-sm-3">Image</dt>
                <dd class="col-sm-9"><img src="/@Model.VaccineImg" alt="Vaccine Image" class="img-thumbnail" /></dd>
                <dt class="col-sm-3">City</dt>
                <dd class="col-sm-9">@Model.City</dd>
                <dt class="col-sm-3">State</dt>
                <dd class="col-sm-9">@Model.State</dd>
                <dt class="col-sm-3">Quantity</dt>
                <dd class="col-sm-9">@Model.Qty</dd>
            </dl>
            <div class="text-center">
                <form method="post">
                    @* <input type="hidden" name="id" value="@Model.VaccineId" /> *@
                    <button type="submit" class="btn btn-danger">Delete</button>
                    <a asp-action="ViewVaccine" class="btn btn-secondary">Cancel</a>
                </form>
            </div>
        </div>
    </div>
</div>

@if (ViewData["Message"] != null)
{
    <div class="alert alert-danger mt-4 text-center">
        @ViewData["Message"]
    </div>
}
