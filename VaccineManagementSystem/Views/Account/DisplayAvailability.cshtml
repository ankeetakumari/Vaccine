@model List<VaccineManagementSystem.Models.CommonVaccinetbl>
@{
    Layout = "_Layout";
}
@{
    ViewBag.Title = "Search Results";
}

<div class="container mt-5">
    <h2 class="text-center text-white bg-primary py-3 rounded">Search Results</h2>
    <style>
        body {
            background-image: url('https://g.foolcdn.com/editorial/images/787474/vaccine-with-world-map.jpg');
            background-size: cover;
            background-position: center;
            color: white;
        }
    </style>
    @if (Model != null && Model.Any())
    {
        <div class="table-responsive bg-light p-4 rounded shadow">
            <table class="table table-hover table-striped">
                <thead class="thead-dark">
                    <tr>
                        <th>Vaccine Name</th>
                        <th>Vaccine Company</th>
                        <th>Vaccine Description</th>
                        <th>State</th>
                        <th>City</th>
                        <th>Available Quantity</th>
                        <th>Vaccine Image</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>@item.VaccineName</td>
                            <td>@item.CompanyName</td>
                            <td>@item.VaccineDesc</td>
                            <td>@item.State</td>
                            <td>@item.City</td>
                            <td>@item.Qty</td>
                            <td>
                                @if (!string.IsNullOrEmpty(item.VaccineImg))
                                {
                                    <img src="~/@item.VaccineImg" alt="Vaccine Image" class="img-thumbnail" style="max-width: 100px; max-height: 100px;" />
                                }
                                else
                                {
                                    <span>No Image Available</span>
                                }
                            </td>
                            <td>
                                <a asp-controller="Account" asp-action="ViewSlots" class="btn btn-danger btn-sm">Book Slot</a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    }
    else
    {
        <div class="alert alert-warning text-center mt-4">
            No vaccines available for the selected criteria.
        </div>
    }
</div>
