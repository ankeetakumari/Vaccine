@model VaccineManagementSystem.Models.VaccineSlotsTbl
@{
    Layout = "_Layout";
}
<style>
    body {
        background-image: url('https://g.foolcdn.com/editorial/images/787474/vaccine-with-world-map.jpg');
        background-size: cover;
        background-position: center;
    }
</style>

<body>
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-md-8">
                <div class="card" style="background-color: rgba(255, 255, 255, 0.8);">
                    <div class="card-header text-center">
                        <h3>@ViewData["Title"]</h3>
                    </div>
                    <div class="card-body">
                        <form method="post" id="rescheduleForm">
                            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                            <div class="form-group">
                                <label asp-for="YearDate" class="control-label"></label>
                                <input type="date" asp-for="YearDate" class="form-control" />
                                <span asp-validation-for="YearDate" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <label asp-for="SlotTime" class="control-label"></label>
                                <input type="time" asp-for="SlotTime" class="form-control" />
                                <span asp-validation-for="SlotTime" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <input type="submit" value="Reschedule" class="btn btn-primary" />
                                <a asp-controller="Account" asp-action="ViewSlots" class="btn btn-danger">Cancel</a>
                            </div>
                        </form>

                        <div>
                            <h5 style="color:black;">@ViewData["v"]</h5>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    <script src="~/lib/jquery-validation/dist/jquery.validate.min.js"></script>
    <script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>
    <script>
        $(document).ready(function () {
            $('#rescheduleForm').validate({
                rules: {
                    YearDate: {
                        required: true,
                        date: true
                    },
                    SlotTime: {
                        required: true,
                        time: true
                    }
                },
                messages: {
                    YearDate: {
                        required: "Please select a date",
                        date: "Please enter a valid date"
                    },
                    SlotTime: {
                        required: "Please select a time",
                        time: "Please enter a valid time"
                    }
                },
                errorPlacement: function (error, element) {
                    error.insertAfter(element);
                }
            });
        });
    </script>
</body>
